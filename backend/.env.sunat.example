# ============================================
# Configuración de Facturación Electrónica SUNAT
# ============================================

# Base de Datos
DATABASE_URL="mysql://root:password@localhost:3306/bazar_abem"

# Servidor
PORT=3000
NODE_ENV=development

# ============================================
# SUNAT - Ambiente BETA (Pruebas)
# ============================================

# URL del servicio WSDL de SUNAT BETA
SUNAT_WSDL_URL="https://e-beta.sunat.gob.pe/ol-ti-itcpfegem-beta/billService?wsdl"

# Credenciales de prueba SUNAT
SUNAT_USERNAME="MODDATOS"
SUNAT_PASSWORD="MODDATOS"

# RUC de la empresa (Bazar Abem)
# En BETA usar: 20000000001
SUNAT_RUC_EMISOR="20000000001"

# Razón social de la empresa
SUNAT_RAZON_SOCIAL="BAZAR ABEM S.A.C."

# Dirección de la empresa
SUNAT_DIRECCION="Av. Principal 123, Lima, Perú"

# ============================================
# SUNAT - Ambiente PRODUCCIÓN (Futuro)
# ============================================

# Descomentar cuando se cambie a producción
# SUNAT_WSDL_URL="https://e-factura.sunat.gob.pe/ol-ti-itcpfegem/billService?wsdl"
# SUNAT_USERNAME="tu_usuario_real"
# SUNAT_PASSWORD="tu_password_real"
# SUNAT_RUC_EMISOR="tu_ruc_real"

# ============================================
# Certificado Digital (Futuro - Producción)
# ============================================

# Ruta al certificado digital (.pfx)
# SUNAT_CERT_PATH="./certs/certificado.pfx"

# Contraseña del certificado
# SUNAT_CERT_PASSWORD="tu_password_certificado"

# ============================================
# Configuración de Facturación
# ============================================

# Tipo de comprobante por defecto
SUNAT_TIPO_COMPROBANTE_DEFAULT="FACTURA"

# Serie de factura
SUNAT_SERIE_FACTURA="F001"

# Serie de boleta
SUNAT_SERIE_BOLETA="B001"

# Máximo número de intentos de envío
SUNAT_MAX_INTENTOS_ENVIO=3

# Timeout para conexión con SUNAT (en ms)
SUNAT_TIMEOUT=30000

# ============================================
# Configuración de Logging
# ============================================

# Nivel de log: debug, info, warn, error
LOG_LEVEL="info"

# Guardar logs en archivo
LOG_FILE="./logs/sunat.log"

# ============================================
# Configuración de Email (Opcional)
# ============================================

# Para enviar comprobantes por email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="tu_email@gmail.com"
SMTP_PASSWORD="tu_password_app"
SMTP_FROM="noreply@bazarabem.com"

# ============================================
# Notas Importantes
# ============================================

# 1. En BETA:
#    - Las respuestas de SUNAT son simuladas
#    - No requiere certificado digital real
#    - Usar credenciales: MODDATOS / MODDATOS
#    - Usar RUC de prueba: 20000000001

# 2. Para Producción:
#    - Obtener certificado digital real de SUNAT
#    - Cambiar URL a ambiente de producción
#    - Usar credenciales reales
#    - Usar RUC real de la empresa

# 3. Seguridad:
#    - Nunca compartir este archivo
#    - Usar variables de entorno en producción
#    - Proteger el certificado digital
#    - Cambiar contraseñas regularmente

# ============================================
