# Auto detect text files and normalize line endings to LF
* text=auto

# Source code
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf

# SQL
*.sql text eol=lf

# Config files
.env text eol=lf
.env.* text eol=lf
.gitignore text eol=lf
.prettierrc text eol=lf
.eslintrc.* text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Archive files
*.zip binary
*.tar binary
*.tgz binary
*.rar binary
